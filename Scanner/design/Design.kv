WindowManager:
    InitialScreen:
    SubnetInput:
    SSHInput:
    ScanOutput:
    SSHOutput:
<RoundedButton@Button>
    background_color: (0,0,0,0)
    background_normal: ''
    canvas.before:
        Color:
            rgba: (34/255, 139/255, 34/255,1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [18]
<InitialScreen>:
    name: "Home"
    BoxLayout:
        orientation: 'vertical'
        size_hint: 0.6, 0.7
        pos_hint: {'center_x': 0.5 , 'center_y': 0.5 }
        Image:
            source: './Scanner/images/filler.png'
        Label:
            text: "Hello there! what are we here to test?"
            font_size: 25
        BoxLayout:
            orientation: 'vertical'
            padding: "10dp"
            spacing: "20dp"
            RoundedButton:
                text: "SSH TEST"
                font_size: 28
                on_release: 
                    app.root.current = "SSH Input"
                    root.manager.transition.direction = "left"
            RoundedButton:
                text: "PING SCAN"
                font_size: 28
                on_release:
                    app.root.current = "Subnet Input"
<SubnetInput>:
    name: "Subnet Input"
    BoxLayout:
        padding: "10dp"
        spacing: "20dp"
        orientation: 'vertical'
        size_hint: 0.6, 0.7
        pos_hint: {'center_x': 0.5 , 'center_y': 0.5 }
        Label:
            text: "Scan!"
            font_size: 25
        TextInput:
            id: IpYielded
            hint_text: 'Network Address; eg. 10.0.0.0/24'
        RoundedButton:
            text: "PING SCAN"
            font_size: 28
            on_release: 
                app.root.current = "Scan Output"
                root.get_input([IpYielded])
                root.clear_inputs([IpYielded])
<ScanOutput>:
    name: "Scan Output"
    BoxLayout:
        orientation: 'vertical'
        size_hint: 0.6, 0.7
        pos_hint: {'center_x': 0.5 , 'center_y': 0.5 }
        Label:
            id: SweepResult
            text: ""
            font_size: 25
<SSHInput>:
    name: "SSH Input"
    BoxLayout:
        padding: "10dp"
        spacing: "20dp"
        orientation: 'vertical'
        size_hint: 0.6, 0.7
        pos_hint: {'center_x': 0.5 , 'center_y': 0.5 }
        Label:
            text: "Time to Test Your SSH config!"
            font_size: 25
        TextInput:
            id: SshIpYielded
            hint_text: "IP Address; eg. 192.168.100.1"
        RoundedButton:
            text: "SSHTest"
            font_size: 28
            on_release: 
                app.root.current = "SSH Output"
                root.get_input(SshIpYielded)
                root.clear_inputs([SshIpYielded])
<SSHOutput>:
    name: "SSH Output"
    on_enter: root.ssh_test()
    BoxLayout:
        orientation: 'vertical'
        size_hint: 0.6, 0.7
        pos_hint: {'center_x': 0.5 , 'center_y': 0.5 }
        Label:
            id: SSHresult
            text: "please wait..."
            font_size: 25  