WindowManager:
    InitialScreen:
    SubnetInput:
    SSHInput:
    ScanOutput:
    SSHOutput:
<InitialScreen>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: './Scanner/images/trator.jpg'
    name: "Home"
    MDBoxLayout:
        orientation: 'vertical'
        size_hint: 0.6, 0.7
        pos_hint: {'center_x': 0.5 , 'center_y': 0.5 }
        Image:
            source: './Scanner/images/potato.png'
            allow_stretch: True
            keep_ratio: True
        Label:
            text: "Welcome to IP potato!"
            font_size: 20
        MDBoxLayout:
            orientation: 'vertical'
            padding: "10dp"
            spacing: "20dp"
            MDRaisedButton:
                pos_hint: {'center_x': 0.5 , 'center_y': 0.5 }
                text: "SSH TEST"
                font_size: 23
                size_hint_x: 0.6
                on_release: 
                    app.root.current = "SSH Input"
                    root.manager.transition.direction = "left"
            MDRaisedButton:
                pos_hint: {'center_x': 0.5 , 'center_y': 0.5 }
                text: "PING SCAN"
                font_size: 23
                size_hint_x: 0.6
                on_release:
                    app.root.current = "Subnet Input"
<SubnetInput>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: './Scanner/images/chicken.jpg'
    name: "Subnet Input"
    MDBoxLayout:
        pos_hint: {'center_x': 0.5 , 'center_y': 0.5 }
        padding: "10dp"
        spacing: "20dp"
        orientation: 'vertical'
        size_hint: 0.6, 0.7
        Image:
            source: './Scanner/images/best_tato.png'
            allow_stretch: True
            keep_ratio: True
        Label:
            text: "What's your network address?"
            font_size: 23
        MDTextField:
            pos_hint: {'center_x': 0.5 , 'center_y': 0.5 }
            id: IpYielded
            hint_text: 'Network Address; eg. 192.168.0.0/24'
            mode: "fill"
            required: True
            size_hint_x: 0.7
            color_mode: 'custom'
            line_color_normal: 1,1,1,1
            line_color_focus: 1,1,1,1
        MDRaisedButton:
            pos_hint: {'center_x': 0.5 , 'center_y': 0.5 }
            text: "Sweep"
            font_size: 20
            on_release:
                root.validate_ip(IpYielded)
                if app.IP_STATUS: app.root.current = "Scan Output"
                root.get_input([IpYielded])
                root.clear_inputs([IpYielded])
<ScanOutput>:
    name: "Scan Output"
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: './Scanner/images/cooltrator.jpg'
    MDBoxLayout:
        orientation: 'vertical'
        size_hint: 0.6, 0.7
        pos_hint: {'center_x': 0.5 , 'center_y': 0.5 }
    MDSpinner:
        size_hint: None, None
        size: dp(46), dp(46)
        pos_hint: {'center_x': .5, 'center_y': .5}
        active: True if app.AUX else False
        
<SSHInput>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: './Scanner/images/chicken.jpg'
    name: "SSH Input"
    MDBoxLayout:
        padding: "10dp"
        spacing: "20dp"
        orientation: 'vertical'
        size_hint: 0.6, 0.7
        pos_hint: {'center_x': 0.5 , 'center_y': 0.5 }
        Image:
            source: './Scanner/images/potato_dancing.png'
            allow_stretch: True
            keep_ratio: True
        Label:
            text: "What's your address?"
            font_size: 23
        MDTextField:
            pos_hint: {'center_x': 0.5 , 'center_y': 0.5 }
            id: SshIpYielded
            hint_text: "IP Address; eg. 192.168.100.1"
            mode: "fill"
            required: True
            size_hint_x: 0.7
            color_mode: 'custom'
            line_color_normal: 1,1,1,1
            line_color_focus: 1,1,1,1
        MDRaisedButton:
            pos_hint: {'center_x': 0.5 , 'center_y': 0.5 }
            text: "SSH Test"
            font_size: 22
            on_release:
                root.validate_ip(SshIpYielded)
                if app.IP_STATUS: app.root.current = "SSH Output"
                root.get_input(SshIpYielded)
                root.clear_inputs([SshIpYielded])
<SSHOutput>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: './Scanner/images/cooltrator.jpg'
    name: "SSH Output"
    on_enter: root.ssh_test()
    MDBoxLayout:
        orientation: 'vertical'
        size_hint: 0.6, 0.7
        pos_hint: {'center_x': 0.5 , 'center_y': 0.5 }
        MDSpinner:
            size_hint: None, None
            size: dp(46), dp(46)
            pos_hint: {'center_x': .5, 'center_y': .5}
            active: True
        Label:
            id: SSHresult
            text: ""
            font_size: 25  